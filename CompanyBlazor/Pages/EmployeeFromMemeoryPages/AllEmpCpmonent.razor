@page "/Emps"
<h3>AllEmpCpmonent</h3>
@if (Emps != null)
{
    <table class="table table-hover">
        @foreach (var item in Emps)
        {
            <tr>
                <td> @item.Name</td>
                <td><a href="/Emp/Details/@item.Id">Details</a></td>
                <td><a href="/Emp/Edit/@item.Id">Edit</a></td>
            </tr>
        }
    </table>
}
else
{
    <h2>Wait .. :) </h2>
}



@code {
    [Inject]
    public IServies<Employee> EmpService { get; set; }

    public List<Employee> Emps { get; set; }

    protected override void OnInitialized()
    {
        Emps = EmpService.getAll();
        base.OnInitialized();
    }
}
